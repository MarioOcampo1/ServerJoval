              <td>
                <%=element.NCarpeta%>
              </td>
              <td><%clientes.forEach((clientes)=>{%>
                
              <%if(clientes.id_Obra==element.id){%>
               <% contador=contador+1%>
                <%}%>
                <%})%>
                <%=contador%>
              </td>
              <td>
                <%=element.Estado%>
              </td>
          </tr>
                <%}%>
        </tbody>
