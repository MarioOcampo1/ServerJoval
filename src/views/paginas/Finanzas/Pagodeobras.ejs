<!-- Modal -->
<div class="container-fluid">
<div class="modal fade" id="ModalPrincipal" tabindex="-1" role="dialog" aria-labelledby="ModalPrincipalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"id="TituloModal"></h5>
        <button type="submit" id="NombreCarpetaParaBoton" onclick="VerCLientes()">Clientes de obra</button>
        <button type="button" class="close"onclick="$('#ModalPrincipal').modal('hide');" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/guardarValor" method="post">
          <div class="row">
            <div class="col ">
            <label for="Monto">Monto</label>
            <input type="number"step="0.01" name="ValorIngresado" id="ValorIngresado">
          </div>
          <div class="col ">
            <label for="Descripcion">Descripción</label>
            <input type="text" name="DetalleDeIngreso" id="DetalleDeIngreso">
          </div>
<div class="col text-center">
  <h6>¿Cliente ha pagado?</h6>
  <label class="text-center" for="">Si</label>

  <input type="radio" name="SeleccionPagado" id="PagadoSi">
  <label  for="">No</label>
  <input type="radio" name="SeleccionPagado" id="PagadoNo">
</div>
<div class="col">
  <label for="">Fecha de pago</label>
  <input type="date" name="FechaPago" id="FechaPago">
</div>
</div>
<div class="row">
  <div class="col">
    <label for="">Imprimir comprobante</label>
    <button>Imprimir</button>
  </div>
<div class="col">
  <label for="">Cargar comprobante de pago</label>
<input type="file" name="ComprobantePago" id="ComprobantePago">
</div>

</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary"onclick="$('#ModalPrincipal').modal('hide');">Cerrar</button>
        <button type="submit" class="btn btn-danger">Guardar</button>
      </form>
      </div>
    </div>
  </div>
</div>
</div>

</body>
    <script>
      function abrirModal(id){
        document.getElementById("TituloModal").innerHTML = id ;
        document.getElementById("NombreCarpetaParaBoton").id = id ;
$("#ModalPrincipal").modal('show');
      }
      function VerCLientes(){
       var NombreCarpeta= event.target.id;
       NombreCarpeta= NombreCarpeta.trim();
       var url= ("/Pagodeobras/clientes/"+ NombreCarpeta);
     window.open(url);
      }
