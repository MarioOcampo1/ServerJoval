   <!DOCTYPE html>
   <html lang="es">
   <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carga de tareas de carpeta </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="../css/editarTareas.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="./bootstrap/dist/css/bootstrap.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"
    integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
   </head>
   <body>
    <div class="text-center">
        <h3 class="Titulo">Tareas de la carpeta <%= user.Nombre%></h3>
    </div>
    <form action="/ActualizarProximasTareas/<%= user.id%>" method="POST">
        <!-- Tareas de la carpeta -->
        <div class="container-fluid">
           
            <div class="card-body">

                <div class="border border-primary ">
                    <div class="row ">
                        <div class="col  text-center">
                            <div class="form-group">
                                <h4>Etapa de la tarea en la cuál va a cargar la información</h4>
                               
                                <input class="form-check-input" required type="radio" name="EtapaTarea"
                                    id="EtapaTareaPreliminar" value="Preliminar">
                                <label class="form-check-label" for="inlineRadio1">Preliminar</label>
                                <input class="form-check-input" type="radio" name="EtapaTarea" id="EtapaTarea1raparte"
                                    value="1ra parte">
                                <label class="form-check-label" for="inlineRadio2">1° parte</label>
                                <input class="form-check-input" type="radio" name="EtapaTarea" id="EtapaTarea2daparte"
                                    value="2da parte">
                                <label class="form-check-label" for="inlineRadio3"> 2° parte</label>
                                <input class="form-check-input" type="radio" name="EtapaTarea" id="EtapaTareaObras"
                                    value="Obras">
                                <label class="form-check-label" for="inlineRadio4">Obras </label>
                                <input class="form-check-input" type="radio" name="EtapaTarea" id="EtapaTareaCaos"
                                    value="Caos">
                                <label class="form-check-label" for="inlineRadio5">Caos </label>

                                <input class="form-check-input" type="radio" name="EtapaTarea" id="EtapaTareaFinalizada"
                                    value="Finalizada">
                                <label class="form-check-label" for="inlineRadio6">Finalizada </label>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row ">
                        <div class="col  text-center">
                            <h4>
                                Responsable de la Tarea:
                            </h4>
                                 
                                <input class="form-check-input" type="radio" name="ResponsableDeTarea" id="ResponsableDeTarea" required
                                    value="Mauricio">
                                     Mauricio
                                <input class="form-check-input" type="radio" name="ResponsableDeTarea" id="ResponsableDeTarea"
                                    value="Gustavo">
                                Gustavo
                                <input class="form-check-input" type="radio" name="ResponsableDeTarea" id="ResponsableDeTarea"
                                    value="Daiana">
                                Daiana
                        </div>
                    </div>
                    <div class="row p-1">
                            <input type="hidden" style="display:none" name="id" id="id" value="<%= user.id%>">
                            <input type="hidden" style="display:none" name="Nombre" id="Nombre"
                                value="<%= user.Nombre%>">
                    </div>
                    <div class="row p-1 ">
                        <div class="input-group">
                            <span class="input-group-text" id="TareaRealizada">Tarea Realizada:</span>
                            
                            <input class="form-control"  type="text" name="TareaRealizada"
                                id="TareaRealizada" placeholder="Ingrese ultima tarea realizada" aria-describedby="TareaRealizada">
                        </div>
                      
                    </div>
                    <div class="row p-1">
                        <div class="input-group">
                            <span class="input-group-text" id="ProximaTarea">Proxima Tarea:</span>
                            
                            <input class="form-control"  type="text" name="ProximaTarea"
                                id="ProximaTarea" placeholder="Ingrese la proxima tarea" aria-describedby="ProximaTarea">
                        </div>
                       
                    </div>
                    <div class="row p-1">
                        <div class="input-group">
                            <span class="input-group-text" id="Fecha_limite">Fecha Limite:</span>
                            
                            <input class="form-control"  type="date" name="Fecha_limite"
                                id="Fecha_limite" placeholder="Ingrese ultima tarea realizada" aria-describedby="Fecha_limite" required>
                        </div>
                       
                    </div>
                </div>

                
                <div class="row ">
                    <div class="col p-2 text-center">
                        <div class="button-group text-center" role="group">
                            <button type="submit" class="btn btn-primary text-center">Actualizar Tarea</button>
                            <button onClick="history.go(-1);" class="btn btn-secondary text-center"">Cancelar</button>
                            </div>
                    </div>
                </div>
                </div>
        </form>
<script>
    function verEtapa(){
        var Etapa = "<%=user.Etapa%>";
        console.log(Etapa);
        if (Etapa=="Preliminar"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
        if (Etapa=="1ra parte"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
        if (Etapa=="2ra parte"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
        if (Etapa=="Obras"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
        if (Etapa=="Caos"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
        if (Etapa=="Finalizada"){
            $('#EtapaTareaPreliminar').prop("checked",true);
        }
    }
</script>
   </body>
   </html>
